<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/Projekt_Name_Titel"
        android:textColor="@color/game_pink"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="78dp" />

    <EditText
        android:id="@+id/name_of_player_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/game_purple"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="282dp" />

    <TextView
        android:id="@+id/player_name_input"
        android:layout_width="223dp"
        android:layout_height="42dp"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="355dp" />

    <EditText
        android:id="@+id/ship_color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Spaceship Color"
        android:textColor="@color/game_purple"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="450dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="405dp"
        android:layout_height="112dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="144dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="387dp"
        android:layout_height="147dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="552dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/lightblueship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_lightblue" />

            <ImageView
                android:id="@+id/greenship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_green" />

            <ImageView
                android:id="@+id/orangeship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_orange" />

            <ImageView
                android:id="@+id/redship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_red" />

            <ImageView
                android:id="@+id/yellowship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_yellow" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/blueship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_blue" />

            <ImageView
                android:id="@+id/dirtywhiteship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_dirtywhite" />

            <ImageView
                android:id="@+id/pinkship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_pink" />

            <ImageView
                android:id="@+id/purpleship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_purple" />

            <ImageView
                android:id="@+id/darkpurpship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_darkpurp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="redship,orangeship,yellowship,greenship,lightblueship,dirtywhiteship,pinkship,darkpurpship,purpleship,blueship" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="redship,orangeship,yellowship,greenship,lightblueship,blueship,pinkship,darkpurpship" />

</androidx.constraintlayout.widget.ConstraintLayout>
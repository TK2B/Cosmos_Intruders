<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".bevore_you_start"
android:background="#000000">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/Projekt_Name_Titel"
        android:textColor="@color/game_pink"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87" />

    <EditText
        android:id="@+id/name_of_player_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/game_purple"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/player_name_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.717" />

    <EditText
        android:id="@+id/player_name_input"
        android:layout_width="223dp"
        android:layout_height="42dp"
        android:layout_marginBottom="4dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/ship_color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Spaceship Color"
        android:textColor="@color/game_purple"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.664" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="405dp"
        android:layout_height="112dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="86dp"
        app:layout_constraintBottom_toTopOf="@+id/name_of_player_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/game_hexagon_shape" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="387dp"
        android:layout_height="147dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ship_color_text">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/lightblueship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_lightblue" />

            <ImageView
                android:id="@+id/greenship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_green" />

            <ImageView
                android:id="@+id/orangeship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_orange" />

            <ImageView
                android:id="@+id/redship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_red" />

            <ImageView
                android:id="@+id/yellowship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_yellow" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/blueship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_blue" />

            <ImageView
                android:id="@+id/dirtywhiteship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_dirtywhite" />

            <ImageView
                android:id="@+id/pinkship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_pink" />

            <ImageView
                android:id="@+id/purpleship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_purple" />

            <ImageView
                android:id="@+id/darkpurpship"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:srcCompat="@drawable/game_ship_darkpurp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

<androidx.constraintlayout.widget.Group
    android:id="@+id/group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:constraint_referenced_ids="redship,orangeship,yellowship,greenship,lightblueship,dirtywhiteship,pinkship,darkpurpship,purpleship,blueship" />

<androidx.constraintlayout.widget.Group
    android:id="@+id/group2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:constraint_referenced_ids="redship,orangeship,yellowship,greenship,lightblueship,blueship,pinkship,darkpurpship" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="realy_start_a_Game"
        android:text="Start Game "
        app:layout_constraintBottom_toTopOf="@+id/ship_color_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>